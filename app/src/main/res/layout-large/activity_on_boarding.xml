<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/linearOnboarding"
    tools:context="com.elconfidencial.eceleccionesgenerales2015.activities.OnBoardingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:id="@+id/logoOnboarding"/>
    <TextView
        android:id="@+id/introduceMunicipio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Introduce su municipio"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="10pt"/>

    <AutoCompleteTextView
        android:id="@+id/searchMunicipio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/empezar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:background="@drawable/button_onboarding"
        android:text="@string/empezar"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15pt"
        android:src="@drawable/button_resultados"/>


</LinearLayout>
