<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:src="@drawable/background_portada"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:text="@string/titulo_el_confidencial"
                    android:gravity="right"
                    android:textSize="16pt"
                    android:id="@+id/label"
                    android:textColor="@color/white"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="|"
                    android:gravity="center"
                    android:textSize="16pt"
                    android:id="@+id/barra"
                    android:textColor="@color/white"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="left"
                    android:text="20-D"
                    android:textSize="22pt"
                    android:id="@+id/d_20"
                    android:textColor="@color/white"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:paddingRight="8dp"
                    android:id="@+id/preferencesIconCont"
                    android:src="@drawable/settings_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/textViewFaltan"
                android:textColor="@color/white"
                android:textSize="9pt"
                android:gravity="center"
                android:text="FALTAN"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="50dp"
                android:id="@+id/layoutdias">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="DIAS"
                    android:textSize="13sp"
                    android:id="@+id/textViewDias"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="bottom|center" />

                <es.elconfidencial.eleccionesgenerales2015.views.DonutProgress

                    android:layout_marginBottom="0dp"
                    android:padding="10dp"
                    android:id="@+id/donut_dias"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    custom:donut_unfinished_stroke_width="5dp"
                    custom:donut_finished_stroke_width="5dp"
                    custom:donut_progress="10"
                    custom:donut_unfinished_color="@color/transparent"
                    android:layout_gravity="center" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/layouthoras"
                android:layout_toRightOf="@id/layoutdias">


                <es.elconfidencial.eleccionesgenerales2015.views.DonutProgress

                    android:layout_marginBottom="0dp"
                    android:id="@+id/donut_horas"
                    android:padding="10dp"
                    android:layout_toRightOf="@id/layouthoras"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    custom:donut_unfinished_stroke_width="5dp"
                    custom:donut_finished_stroke_width="5dp"
                    custom:donut_progress="10"
                    custom:donut_unfinished_color="@color/transparent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="HORAS"
                    android:textSize="13sp"
                    android:id="@+id/textViewHoras"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="bottom|center" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/layoutminutos"
                android:layout_toRightOf="@id/layouthoras">


                <es.elconfidencial.eleccionesgenerales2015.views.DonutProgress

                    android:layout_marginBottom="0dp"
                    android:padding="10dp"
                    android:id="@+id/donut_minutos"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    custom:donut_unfinished_stroke_width="5dp"
                    custom:donut_finished_stroke_width="5dp"
                    custom:donut_progress="10"
                    custom:donut_unfinished_color="@color/transparent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="MINUTOS"
                    android:textSize="13sp"
                    android:id="@+id/textViewMinutos"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="bottom|center" />

            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/textViewColegiosElectorales"
                android:textColor="@color/white"
                android:textSize="9pt"
                android:gravity="center"
                android:text="PARA QUE ABRAN LOS COLEGIOS ELECTORALES"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>