<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/posicion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/Color_position"
            android:textSize="10pt"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/fotoPolitico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:src="@drawable/nopicpersona"
            android:layout_gravity="center"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:id="@+id/nombrePolitico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Albert Rivera"
                android:textSize="11pt"
                android:textColor="@color/titulos"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/partidoPolitico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Ciudadanos"
                android:textSize="5pt"
                android:textAllCaps="true"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/likesPolitico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:layout_gravity="clip_vertical"
                    android:src="@drawable/caralittleok"/>
                <TextView
                    android:id="@+id/nAgrees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="8pt"
                    android:textColor="@color/Color_agree"
                    android:layout_gravity="center"
                    android:gravity="center" />
                <ImageView
                    android:id="@+id/dislikesPolitico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="15dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="clip_vertical"
                    android:src="@drawable/caralittleno" />
                <TextView
                    android:id="@+id/nDisAgrees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="8pt"
                    android:textColor="@color/Color_disagree"
                    android:layout_gravity="center"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:adjustViewBounds="true"
                    android:layout_gravity="clip_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/material_grey_300"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

</LinearLayout>